.page-header
  %h2= "#{@ticket_holder.name}'s Games in #{@ticket_holder.season.years}"
%p#notice= notice
%table.zebra-striped
  %tr
    %th Puck Drop
    %th Opponent
    %th Preseason?
    %th Tickets
  - @games.each do |game|
    %tr
      %td= link_to game.puck_drop.to_s(:pretty), game
      %td= game.opponent
      %td= 'Y' if game.preseason?
      %td= game.tickets_belonging_to(@ticket_holder).count
= link_to 'Edit', edit_ticket_holder_path(@ticket_holder)
