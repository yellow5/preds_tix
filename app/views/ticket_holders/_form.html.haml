= form_for(@ticket_holder, html: { class: 'form-horizontal' }) do |f|
  - if @ticket_holder.errors.any?
    .alert.alert-block.alert-error
      %p.side-padded
        %strong
          = pluralize(@ticket_holder.errors.count, "error")
          prohibited this ticket_holder from being saved:
        %ul
          - @ticket_holder.errors.full_messages.each do |msg|
            %li= msg
  .control-group
    = f.label :season_id, class: 'control-label'
    .controls
      = f.select :season_id, @seasons.collect { |s| [ s.years, s.id ] }
  .control-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name
  .form-actions
    = f.submit class: 'btn btn-primary'
