!!!
%html
  %head
    %title PredsTix
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tag
    %link{ :ref => 'shortcut icon', :type => 'image/x-icon', :href => '/favicon.ico' }
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %h3
            = link_to 'PredsTix', root_path, :class => 'brand'
          .nav-collapse
            %ul.nav
              %li
                = link_to 'Games', root_path
            %ul.nav.pull-right
              %li.dropdown
                = link_to "Ticket Holders #{content_tag(:b, '', :class => 'caret')}".html_safe, '#', :class => 'dropdown-toggle', 'data-toggle' => 'dropdown'
                %ul.dropdown-menu
                  - @ticket_holders.each do |ticket_holder|
                    %li= link_to(ticket_holder.name, ticket_holder)
    .margined-top
      .container
        = yield
