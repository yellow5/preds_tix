<h1><%= @season.years %> Games</h1>

<table>
  <tr>
    <th>Puck Drop</th>
    <th>Opponent</th>
    <th>Preseason?</th>
    <th>Seats Available</th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.puck_drop.to_s(:pretty) %></td>
    <td><%= game.opponent %></td>
    <td><%= 'Y' if game.preseason? %></td>
    <td><%= game.available_tickets.count %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Game', new_game_path %>
